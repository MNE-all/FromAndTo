<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:rotation="-26"
        android:scrollbarSize="5dp"
        app:cardBackgroundColor="#314267"
        app:cardCornerRadius="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:padding="25dp"
            android:rotation="26"
            android:scaleType="centerCrop"
            android:scrollbarSize="2dp"
            app:srcCompat="@drawable/baseline_account_circle_24" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="210dp"
        android:layout_height="22dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:inputType="phone"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="405dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Пароль:"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="457dp" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="211dp"
        android:layout_height="26dp"
        android:ems="10"
        android:inputType="numberPassword"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="450dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Номер телефона:"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="405dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Войти"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="491dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Нет аккаунта?"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="550dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Зарегистрируйтесь."
        android:textColor="#191CF3"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="549dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Я забыл пароль."
        android:textColor="#191CF3"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="586dp" />

</androidx.constraintlayout.widget.ConstraintLayout>